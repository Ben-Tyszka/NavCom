<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lat: undefined Long: undefined"
        android:id="@+id/latlongview"
        android:layout_marginTop="163dp"
        android:textSize="54dp"
        android:textColor="#f20000"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GPS: sys_n_eng"
        android:textColor="#f20000"
        android:id="@+id/gps_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Heading: sys_n_eng"
        android:id="@+id/heading_view"
        android:layout_below="@+id/latlongview"
        android:layout_centerHorizontal="true"
        android:textSize="54dp"
        android:textColor="#f20000"
        android:layout_marginTop="148dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undetected"
        android:id="@+id/sat_num"
        android:textSize="25dp"
        android:textColor="#f20000"
        android:layout_toEndOf="@+id/heading_view"
        android:layout_below="@+id/gps_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:id="@+id/alti"
        android:layout_below="@+id/heading_view"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_marginTop="80dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
